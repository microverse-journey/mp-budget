<div class="col-md-6 mx-auto my-5 bg-white p-3 ">
    <%= link_to "<< Back", authenticated_root_path,  class: " btn btn-default  bg-gradient mb-3" %>
    <h1 class="text-center">New Purchase</h1>

    <%= form_with model: @purchase, url: group_purchases_path(@id), class: "form mt-5", data: { turbo:false}, local: true do |f| %>

        <% if @purchase.errors.any? %>
            <div class="alert alert-danger">
                <% @purchase.errors.full_messages.each do |message| %>
                    <div><%= message.inspect %></div>
                <% end %>
            </div>
        <% end %>
        
        <div class="mb-3">
            <%= f.label :name %><br>
            <%= f.text_field :name, placeholder: "Enter name", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :amount %><br>
            <%= f.number_field :amount, placeholder: "Enter Amount in dollar", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :category %><br>
            <%= f.collection_select :group_id, current_user.groups, :id, :name, {prompt: "Select Ingedient"}, {class: "form-select"} %>
        </div>
        
        <%= f.submit "Save", class: "btn btn-default w-100 bg-gradient mt-2" %>
    <% end %>
</div>
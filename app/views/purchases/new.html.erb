<div class="col-md-6 mx-auto my-5 bg-white p-3 ">
 <%= link_to "<< Back", authenticated_root_path,  class: " btn btn-default  bg-gradient mb-3" %>
    <h1 class="text-center">New Category</h1>

    <%= form_with model: @group, class: "form mt-5", data: { turbo:false}, local: true do |f| %>

        <% if @group.errors.any? %>
            <div class="alert alert-danger">
                <% @group.errors.full_messages.each do |message| %>
                    <div><%= message.inspect %></div>
                <% end %>
            </div>
        <% end %>
        
        <div class="mb-3">
            <%= f.label :name %><br>
            <%= f.text_field :name, placeholder: "Enter category name", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :category_icon %><br>
            <%= f.file_field :icon, placeholder: "Upload category icon", class: "form-control", required: true %>
        </div>
        
        <%= f.submit "Create Category", class: "btn btn-default bg-gradient mt-2" %>
    <% end %>
</div>
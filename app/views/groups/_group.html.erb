<%= link_to group_path(group.id), class:"group d-flex mb-2 border align-items-center p-3 bg-white gap-2" do %>
    <div class="col-2">
        <%= image_tag(group.icon, class: "img-fluid") %>
    </div>
    <div class="col-10 d-flex justify-content-between">
        <div class="">
            <h2 class="title"><%= group.name %></h2>
            <p class="mt-3 date"><%= l(group.created_at, format: :only_date) %></p>
        </div>
        <div class="">
           <h4 class="total"><%= number_to_currency(group.purchases.sum(:amount)) %></h4>
        </div>
    </div>
    
<% end %>